<odoo>
  <data>

    <record id="deposite_product_uom_form_view" model="ir.ui.view">
        <field name="name">deposite.uom.uom.form</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                        <page string="Deposite Lines" name="deposit_lines">
                            <field
                                name="deposit_line"
                                widget="section_and_note_one2many"
                                mode="tree"
                                >
                                <tree
                                    string="Product Deposite Lines"
                                    editable="bottom"
                                >
                                    <field
                                        name="product_id"
                                        force_save="1"
                                        widget="product_configurator"
                                    />
                                    <field
                                        name="container_product_id"
                                        force_save="1"
                                        widget="product_configurator"
                                    />
                                    <field
                                        name="price_deposit"
                                    />
                                </tree>
                            </field>
                        </page>
                        
                    </notebook>
            </xpath>
        </field>
    </record>

  </data>
</odoo>