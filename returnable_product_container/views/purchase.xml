<?xml version="1.0" encoding="utf-8"?>
<odoo>        

    <record id="purchase_order_form_with_deposit" model="ir.ui.view">
        <field name="name">purchase.order.form.view.with_deposit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='products']/group" position="before">
                    <div class="oe_right">
                        <button name="set_deposit_line" type="object" string="Update Deposit" data-hotkey="d"/>
                    </div>
                </xpath>
                
            </data>
        </field>
    </record>

</odoo>