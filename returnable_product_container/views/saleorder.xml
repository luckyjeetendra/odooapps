<?xml version="1.0" encoding="utf-8"?>
<odoo>        

    <record id="view_order_form_with_deposit" model="ir.ui.view">
        <field name="name">sale.order.form.view.with_deposit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='note_group']" position="before">
                    <div class="oe_right">
                        <button name="set_deposit_line" type="object" string="Update Deposit" data-hotkey="d"/>
                    </div>
                </xpath>
            </data>
        </field>
    </record>

    <record id="sale.menu_product_uom_form_action" model="ir.ui.menu">
        <field name="active" eval="True"/>
    </record>


</odoo>